
{% extends "AppBundle:Layout:templategeneral.html.twig" %}

{% block body %}



<section class="toutmillieu">

  <div class="millieu">
  <article class="arti">

     {% for sport in listSport %}
                  <div class="col-sm-4 col-lg-6 col-md-6">
      <div class="thumbnail">
<a href="{{ path('leaguecatalog', {'id': sport.id})}}"><img src="{{asset('uploads/images/sport/'~sport.image)}}" height="180px"  width="140px" ></a>
          
        <div class="caption">
                          
            <h4>{{sport.libelle}}  </h4>
         
            <p>{{sport.commentaire}} </p>
        </div>
        

    </div>
  </div>
 
        {% endfor %}
    
  </article>




</section>

{% endblock %}
